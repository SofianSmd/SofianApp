<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SofianApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SofianApp"
    Shell.FlyoutBehavior="Disabled"
    TabBarBackgroundColor="White"
    TabBarForegroundColor="Black"
    TabBarTitleColor="Black"
    TabBarUnselectedColor="DarkGray"
    >
    
    <TabBar>
        
        <ShellContent
            Title="Accueil"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"/>
    
        <ShellContent
            Title="Tout"
            Icon="world.png"
            ContentTemplate="{DataTemplate local:MainPage}"
             />
    
        <ShellContent
            Title="Continents"
            Icon="continent.png"
            ContentTemplate="{DataTemplate local:MainPage}"
             />
    
        <ShellContent
            Title="Recherche"
            Icon="recherche.png"
            ContentTemplate="{DataTemplate local:MainPage}"
             />
        
    </TabBar>


</Shell>

